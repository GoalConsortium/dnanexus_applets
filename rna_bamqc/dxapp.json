{
  "name": "rna_bamqc",
  "title": "RNASeq Alignment QC",
  "summary": "RNASeq Alignment QC, alignment stats and fastqc",
  "dxapi": "1.0.4",
  "version": "1.0.4",
  "inputSpec": [
    {
      "name": "bam",
      "label": "BAM",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": ""
    },
    {
      "name": "alignstats",
      "label": "Alignment Statistics",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "sampleid",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "fastqczip",
      "label": "FastQC output file (zip)",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fastqchtml",
      "label": "FastQC output file (html)",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "seqstats",
      "label": "Sequence Statistics output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/rna_bamqc.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
