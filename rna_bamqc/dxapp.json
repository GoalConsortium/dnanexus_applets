{
  "name": "rna_bamqc",
  "title": "RNASeq Alignment QC",
  "summary": "RNASeq Alignment QC, alignment stats and fastqc",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "openSource": true,
  "inputSpec": [
    {
      "name": "bam",
      "label": "BAM",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": "BAM File"
    },
    {
      "name": "alignstats",
      "label": "Alignment Statistics",
      "class": "file",
      "optional": false,
      "help": "Stats from HiSat2 (rna_align app)"
    },
    {
      "name": "sampleid",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "fastqczip",
      "label": "FastQC output file (zip)",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fastqchtml",
      "label": "FastQC output file (html)",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "seqstats",
      "label": "Sequence Statistics output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/rna_bamqc.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  },
    "details": {
  "upstreamProjects": [
    {
      "name": "FastQC",
      "repoUrl": "https://www.bioinformatics.babraham.ac.uk/projects/fastqc ",
      "version": "v0.11.5",
      "license": "GPL-3.0-or-later",
      "author": "Simon Andrews"
    },
    {
      "name": "Samtools",
      "repoUrl": "http://www.htslib.org",
      "version": "1.10",
      "license": "BSD, MIT",
      "licenseUrl": "https://github.com/samtools/samtools/blob/develop/LICENSE",
      "author": "Heng Li"
    }
   ],
     "citations": [
    "arXiv:1303.3997v2"
  ]
 }
}
