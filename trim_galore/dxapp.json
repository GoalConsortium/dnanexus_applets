{
  "name": "trim_galore",
  "title": "Trim Galore",
  "summary": "Trim Galore: Trims poor quality sequence from reads",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "openSource": true,
  "inputSpec": [
    {
      "name": "fq1",
      "label": "Fastq1",
      "class": "file",
      "optional": false,
      "patterns": [
          "*.fastq.gz","*.fq.gz"
      ],
      "help": "FastQ R1"
    },
    {
      "name": "fq2",
      "label": "Fastq2",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq.gz","*.fq.gz"
      ],
      "help": "FastQ R2"
    },
    {
      "name": "sampleid",
      "label": "Output Files Prefix",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "trim1",
      "label": "Trim Fq1",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trim2",
      "label": "Trim Fq2",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trimreport",
      "label": "Trim Output Report",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 2
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/trim_galore.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  },
    "details": {
  "upstreamProjects": [
    {
      "name": "Trim Galore",
      "repoUrl": "https://www.bioinformatics.babraham.ac.uk/projects/trim_galore",
      "version": " v0.4.1",
      "license": "GPL-3.0-or-later",
      "author": "Felix Krueger"
    }
  ]
 }
}
