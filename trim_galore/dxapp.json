{
  "name": "trim_galore",
  "title": "TrimGalore_0.5.25",
  "summary": "Trim Galore trims poor quality sequence from reads",
  "dxapi": "1.0.0",
  "version": "0.5.25",
  "inputSpec": [
    {
      "name": "fq1",
      "label": "Fastq R1",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fq2",
      "label": "Fastq R2",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "Output Prefix",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "trim1",
      "label": "Trim Fq R1",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trim2",
      "label": "Trim Fq R2",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trimreport",
      "label": "Trim Output Report",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/trim_galore.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem1_ssd1_x2"
        }
      }
    }
  }
}
