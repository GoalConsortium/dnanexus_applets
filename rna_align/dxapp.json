{
  "name": "rna_align",
  "title": "RNASeq Alignment",
  "summary": "Creates a BAM file from RNASeq data",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "openSource": true,
  "inputSpec": [
    {
	"name": "fq1",
	"label": "Fastq1",
	"class": "file",
	"optional": false,
	"patterns": [
            "*.fastq.gz","*.fq.gz"
	],
	"help": "FastQ R1"
    },
    {
      "name": "fq2",
      "label": "Fastq2",
      "class": "file",
      "optional": false,
	"patterns": [
            "*.fastq.gz","*.fq.gz"
	],
      "help": "FastQ R2"
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
	"patterns": [
            "*.tar.gz"
	],
      "help": "HiSat2 Reference"
    },
    {
      "name": "sampleid",
      "label": "ReadGroup/SampleID",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "umi",
      "label": "UMI in ReadName",
      "class": "boolean",
	"optional": false,
	"default": true,
      "help": "Are there UMI in the FastQ ReadName?"
    },
    {
      "name": "aligner",
      "label": "Aligner to be used",
      "class": "string",
      "optional": false,
      "default": "hisat",
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "bam",
      "label": "BAM file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "bai",
      "label": "BAM Index file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "alignstats",
      "label": "rnaseq alignment summary stats file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 2
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/rna_align.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x8"
        }
      }
    }
  },
  "details": {
  "upstreamProjects": [
    {
      "name": "HiSAT2",
      "repoUrl": "http://daehwankimlab.github.io/hisat2",
      "version": "2.2.1",
      "license": "GPL-3.0-or-later",
      "author": "Daehwan Kim"
    },
    {
      "name": "Samtools",
      "repoUrl": "http://www.htslib.org",
      "version": "1.10",
      "license": "BSD, MIT",
      "licenseUrl": "https://github.com/samtools/samtools/blob/develop/LICENSE",
      "author": "Heng Li"
    }
  ],
  "citations": [
    "https://doi.org/10.1038/s41587-019-0201-4",
    "https://pubmed.ncbi.nlm.nih.gov/19505943/"
  ]
 }
}
