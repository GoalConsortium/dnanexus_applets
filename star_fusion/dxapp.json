{
  "name": "star_fusion",
  "title": "STAR-Fusion",
  "summary": "STAR-Fusion identifies Gene Fusions in Paired-End RNASeq",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "openSource": true,
  "inputSpec": [
    {
      "name": "fq1",
      "label": "Fastq1",
      "class": "file",
      "optional": false,
      "patterns": [
          "*.fastq.gz","*.fq.gz"
      ],
      "help": ""
    },
    {
      "name": "fq2",
      "label": "Fastq2",
      "class": "file",
      "optional": false,
      "patterns": [
          "*.fastq.gz","*.fq.gz"
      ],
      "help": ""
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
          "*.tar.gz"
      ],
      "help": ""
    },
    {
      "name": "panel",
      "label": "RNA Panel Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
          "*.tar.gz"
      ],
      "help": ""
    },
    {
      "name": "sampleid",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
     {
      "name": "starfusion",
      "label": "Star Fusion output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 2
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/star_fusion.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x8"
        }
      }
    }
  },
  "details": {
  "upstreamProjects": [
    {
      "name": "Star-Fusion",
      "repoUrl": "https://github.com/STAR-Fusion/STAR-Fusion/wiki",
      "version": "v1.9.1",
      "license": "BSD 2-Clause",
      "licenseUrl": "https://github.com/STAR-Fusion/STAR-Fusion/blob/master/LICENSE",
      "author": "Brian Haas"
    },
    {
      "name": "AGFusion",
      "repoUrl": "https://github.com/murphycj/AGFusion",
      "version": "v1.25",
      "license": "MIT",
      "licenseUrl": "https://github.com/murphycj/AGFusion/blob/master/LICENSE.txt",
      "author": "Charles Murphy"
    }

  ],
  "citations": [
    " https://genomebiology.biomedcentral.com/articles/10.1186/s13059-019-1842-9",
    "http://dx.doi.org/10.1101/080903"
  ]

 }

}


 
