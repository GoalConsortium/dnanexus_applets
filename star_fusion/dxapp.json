{
  "name": "star_fusion",
  "title": "STAR-Fusion 0.5.29",
  "summary": "STAR-Fusion",
  "dxapi": "1.0.0",
  "version": "0.5.29",
  "inputSpec": [
    {
      "name": "fq1",
      "label": "Trimmed Fastq1",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "fq2",
      "label": "Trimmed Fastq2",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
     {
      "name": "starfusion",
      "label": "Star Fusion output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/star_fusion.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x16"
        }
      }
    }
  }
}
