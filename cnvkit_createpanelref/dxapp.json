{
  "name": "cnvkit_createpanelref",
  "title": "CNVKit Panel Reference File Generator",
  "summary": "This app will take a bed file and a set of panel of normals BAMs to generate reference files for running CNVkit",
  "dxapi": "1.0.0",
  "openSource": true,
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "bams",
      "label": "BAMs",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": "Panel of Normal Bam Files"
    },
    {
      "name": "panelbed",
      "label": "Target BED File",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bed"
      ],
      "help": "Target BedFile"
    },
    {
      "name": "reference",
      "label": "Reference (tar gz)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "Reference FastA + Annotation File"
    }
  ],
  "outputSpec": [
    {
      "name": "poncnn",
      "label": "PoN CNN + Target/AntiTarget Bed (tar.gz)",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 4
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/cnvkit_createpanelref.sh",
    "version": "1"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  },
     "details": {
  "upstreamProjects": [
        {
      "name": "CNVKit"
      "repoUrl": "https://cnvkit.readthedocs.io/en/stable/",
      "version": "0.9.7",
      "license": "Apache 2.0",
      "author": "Eric Talevich",
      "citationUrl": "http://dx.doi.org/10.1371/journal.pcbi.1004873"
    }
  ],
  "citations": [
   "http://dx.doi.org/10.1371/journal.pcbi.1004873" 
  ]
 }

}
