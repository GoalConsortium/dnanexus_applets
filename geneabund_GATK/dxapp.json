{
  "name": "geneabund_GATK",
  "title": "gene abundance and GATK",
  "summary": "calculates gene counts and fpkm values + create group bam",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "Aligned_BAM",
      "label": "Aligned BAM from STARalign step (aligned.bam)",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "stranded",
      "label": "0(unstranded) 1(stranded) 2(reversely stranded)",
      "class": "int",
      "optional": false,
      "default": 0,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "counts",
      "label": "featureCounts output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "strcts",
      "label": "Strcts output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fpkm",
      "label": "stringtie fpkm output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "finalbam",
      "label": "Final Bam File",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "finalindex",
      "label": "Final Bam Index File",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/geneabund_GATK.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem1_ssd1_x16"
        }
      }
    }
  }
}
