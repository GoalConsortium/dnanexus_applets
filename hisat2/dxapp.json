{
  "name": "hisat2",
  "title": "HiSAT2",
  "summary": "Splice Aware Alignment using HiSAT2",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "RNA-Seq"
  ],
  "inputSpec": [
    {
      "name": "fastq",
      "label": "fastq.gz",
      "class": "file",
      "optional": false
    },
    {
      "name": "fastq2",
      "label": "fastq.gz pair mate",
      "class": "file",
      "optional": true
    },
    {
      "name": "reference",
      "label": "alignment reference built using hisat-build",
      "class": "file",
      "optional": false
    },
    {
      "name": "options",
      "label": "HiSAT Additional Options",
      "class": "string",
      "optional": true,
      "default": "-p 2"
    }
  ],
  "outputSpec": [
    {
      "name": "bamfile",
      "label": "output bam file",
      "class": "file"
    }
  ],
  "runSpec": {
    "interpreter": "bash",
    "file": "src/hisat2.sh"
  },
  "authorizedUsers": []
}
