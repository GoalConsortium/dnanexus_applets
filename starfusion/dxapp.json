{
  "name": "starfusion",
  "title": "starfusion",
  "summary": "detect fusions using starfusion",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "fusion",
      "label": "run starfusion option",
      "class": "string",
      "optional": true,
      "default": "detect",
      "help": ""
    },
    {
      "name": "pairs",
      "label": "single-end(se) or paired-end(pe)",
      "class": "string",
      "optional": true,
      "default": "pe",
      "help": ""
    },
    {
      "name": "trimread1",
      "label": "trimmed read 1 fastq file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trimread2",
      "label": "trimmed read 2 fastq file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "fusionout",
      "label": "starfusion output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/starfusion.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x36"
        }
      }
    }
  }
}
