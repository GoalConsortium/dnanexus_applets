{
  "name": "align_markdups",
  "title": "Align_Markdups_0.5.29",
  "summary": "This app runs BWA, MarksDuplicates (PICARD or FG Biotools) and QC",
  "dxapi": "1.0.0",
  "version": "0.5.29",
  "inputSpec": [
    {
      "name": "fq1",
      "label": "Fastq1",
      "class": "file",
      "optional": false,
      "patterns": [
          "*.fastq.gz","*.fq.gz"
      ],
      "help": "R1"
    },
    {
      "name": "fq2",
      "label": "Fastq2",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq.gz","*.fq.gz"
      ],
      "help": "R2"
    },
    {
      "name": "humanref",
      "label": "BWA Index Files for Human Genome (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "tar gz file of BWA index files for Human Genome"
    },
    {
      "name": "virusref",
      "label": "BWA Index Files for Virus Genomes (tar.gz)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "tar gz file of BWA index files for Viral Genome"
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "panel",
      "label": "Panel Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": ""
    },
    {
      "name": "trimstat",
      "label": "Trim Statistics Report from trim step",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.trimreport.txt"
      ],
      "help": ""
    },
    {
      "name": "mdup",
      "label": "MarkDup Method",
      "class": "string",
      "optional": false,
      "default": "fgbio_umi",
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "rawbam",
      "label": "Raw Bam",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "conbam",
      "label": "Consensus Bam",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "rawbai",
      "label": "Raw BAM index",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "conbai",
      "label": "Consensus BAM index",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "vseqstat",
      "label": "Virus Sequence Stats",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "seqstats",
      "label": "concatenated sequence stats",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
      "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/align_markdups.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x16"
        }
      }
    }
  }
}
