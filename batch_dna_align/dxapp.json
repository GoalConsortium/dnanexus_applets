  ],
  "inputSpec": [
    {
      "name": "fqs",
      "label": "Fastqs",
      "class": "array:file",
      "optional": false,
      "patterns": [
          "*.fastq.gz","*.fq.gz"
      ],
      "help": "FastQ Files"
    },
    {
      "name": "design",
      "label": "Design File",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.txt"
      ],
      "help": "File Tab-Delimted with Columns: SampleID, FqR1, FqR2.  Include these column names in the first row. SampleID is a unique ID per Pair of Reads.  FqR1 is the R1 of the read pair and FqR2 is the R2 of the read pair."
    },
    {
      "name": "humanref",
      "label": "BWA Index Files for Human Genome (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "tar gz file of BWA index files for Human Genome"
     }
  ],
  "outputSpec": [
    {
      "name": "bam",
      "label": "Sorted Bam",
      "class": "array:file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "bai",
      "label": "BAM index",
      "class": "array:file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
      "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/batch_dna_align.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x16"
        }
      }
    }
  }
}
