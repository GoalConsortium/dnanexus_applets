{
  "name": "snv_indel_calling",
  "title": "Variant Calling Applet 0.5.26",
  "summary": "This applet contains variant calling methods for tumor only and somatic workflows. Including Platypus, Freebayes, Strelka2, Mutect2, and Shimmer",
  "dxapi": "1.0.0",
  "version": "0.5.26",
  "inputSpec": [
    {
      "name": "Tumor_BAM",
      "label": "Tumor BAM (.bam)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "Normal_BAM",
      "label": "Normal BAM (.bam)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "panel",
      "label": "Panel Files (tar.gz)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "algo",
      "label": "Variant Calling Algorithm (fb, mutect, platypus, strelka2, shimmer)",
      "class": "array:string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "vcf",
      "label": "VCF File Output",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "ori",
      "label": "Original VCF File Output",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 8
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/snv_indel_calling.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem1_ssd1_x16"
        }
      }
    }
  }
}
