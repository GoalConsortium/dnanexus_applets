{
  "name": "shimmer",
  "title": "Shimmer",
  "summary": "Shimmer predicts sommatic mutations",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "Consensus_Tumor_BAM",
      "label": "Consensus Tumor BAM (consensus.bam)",
      "class": "file",
      "optional": false
    },
    {
      "name": "Consensus_Normal_BAM",
      "label": "Consensus Normal BAM (consensus.bam)",
      "class": "file",
      "optional": false
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "shimmer_vcf",
      "label": "Shimmer VCF File",
      "class": "file"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/shimmer.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem1_ssd1_x16"
        }
      }
    }
  }
}
