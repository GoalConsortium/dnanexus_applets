{
  "name": "dna_bamqc",
  "title": "dna_bamqc_0.5.19",
  "summary": "Concat stat txt files from alignment workflow",
  "dxapi": "1.0.0",
  "version": "0.5.19",
  "inputSpec": [
    {
      "name": "Raw_BAM",
      "label": "Raw BAM from alignment step (raw.bam)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "Raw_BAI",
      "label": "Raw BAI from alignment step (raw.bam.bai)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "panel",
      "label": "Panel Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trimstat",
      "label": "Trim Statistics Report from trim step",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "flagstats",
      "label": "alignment stats",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "covhist",
      "label": "coverage hist stats",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "genomecov",
      "label": "genome coverage",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    { 
      "name": "otflagstats",
      "label": "on target alignment stats",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "mapqualcov",
      "label": "mapping quality coverage",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "seqstats",
      "label": "concatenated sequence stats",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/dna_bamqc.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem1_ssd1_x16"
        }
      }
    }
  }
}
