{
  "name": "geneabund",
  "title": "gene abundance",
  "summary": "calculates gene counts and fpkm values",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "pair_id",
      "label": "Sample ID",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "aligned",
      "label": "aligned bam file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "stranded",
      "label": "0(unstranded) 1(stranded) 2(reversely stranded)",
      "class": "int",
      "optional": true,
      "default": 0,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "counts",
      "label": "featureCounts output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fpkm",
      "label": "stringtie fpkm output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/geneabund.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x36"
        }
      }
    }
  }
}
