{
  "name": "geneabund",
  "title": "gene abundance 0.5.33",
  "summary": "calculates gene counts and fpkm values",
  "dxapi": "1.0.0",
  "version": "0.5.33",
  "inputSpec": [
    {
      "name": "Aligned_BAM",
      "label": "Aligned BAM from rnaalign step (aligned.bam)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": ""
    },
    {
      "name": "gtf",
      "label": "Gencode GTF File",
      "class": "file",
      "optional": false,
      "patterns": [
        "*gtf.gz"
      ],
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "glist",
      "label": "Panel Gene Info",
      "class": "file",
      "optional": true,
      "patterns": [
        "*tar.gz"
      ],
      "help": ""
    },
    {
      "name": "stranded",
      "label": "0(unstranded) 1(stranded) 2(reversely stranded)",
      "class": "int",
      "optional": false,
      "default": 0,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "counts",
      "label": "featureCounts output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "strcts",
      "label": "Strcts output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fpkm",
      "label": "stringtie fpkm output file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/geneabund.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
