  ],
  "inputSpec": [
    {
      "name": "bam",
      "label": "BAM",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": "RNA BAM File"
    },
    {
      "name": "gtf",
      "label": "Gencode GTF File",
      "class": "file",
      "optional": false,
      "patterns": [
        "*gtf.gz"
      ],
      "help": "https://www.gencodegenes.org/human/"
    },
    {
      "name": "sampleid",
      "label": "ReadGroup/SampleID",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "glist",
      "label": "Panel Gene List",
      "class": "file",
      "optional": true,
      "patterns": [
        "*tar.gz"
      ],
      "help": "(Optional) File with the List of Gene Symbols if Hyb from a Gene Panel"
    },
    {
      "name": "stranded",
      "label": "Stranded Library",
      "class": "int",
      "optional": false,
      "default": 0,
      "help": "0(unstranded), 1(stranded), 2(reversely stranded)"
    }
  ],
  "outputSpec": [
    {
      "name": "counts",
      "label": "featureCounts Gene Count File",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "strcts",
      "label": "StringTie Output Files",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "fpkm",
      "label": "StringTie FPKM File",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/school_rna_geneabundance.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
