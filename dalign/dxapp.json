{
  "name": "dalign",
  "title": "Align_0.5.40",
  "summary": "This app runs BWA",
  "dxapi": "1.0.0",
  "version": "0.5.40",
  "inputSpec": [
    {
      "name": "fq1",
      "label": "Fastq1",
      "class": "file",
      "optional": false,
      "patterns": [
          "*.fastq.gz","*.fq.gz"
      ],
      "help": "R1"
    },
    {
      "name": "fq2",
      "label": "Fastq2",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq.gz","*.fq.gz"
      ],
      "help": "R2"
    },
    {
      "name": "humanref",
      "label": "BWA Index Files for Human Genome (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "tar gz file of BWA index files for Human Genome"
    },
    {
      "name": "virusref",
      "label": "BWA Index Files for Virus Genomes (tar.gz)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "tar gz file of BWA index files for Viral Genome"
    },
    {
      "name": "umi",
      "label": "UMI in ReadName",
      "class": "boolean",
      "optional": true,
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "rawbam",
      "label": "Raw Bam",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "rawbai",
      "label": "Raw BAM index",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "vseqstat",
      "label": "Virus Sequence Stats",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
      "timeoutPolicy": {
      "*": {
        "hours": 4
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/dalign.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x16"
        }
      }
    }
  }
}
