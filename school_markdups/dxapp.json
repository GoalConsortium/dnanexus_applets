  "inputSpec": [
   {
      "name": "bam",
      "label": "Sorted BAM (.bam)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": "BAM file"
    },
   {
      "name": "bai",
      "label": "BAM Index (.bai)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bai"
      ],
      "help": "BAM BAI file"
    },
    {
      "name": "sampleid",
      "label": "ReadGroup/SampleID",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "humanref",
      "label": "BWA Index Files for Human Genome (tar.gz)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "(Optional) tar gz file of BWA index files for Human Genome"
    },
    {
      "name": "mdup",
      "label": "MarkDup Method",
      "class": "string",
      "optional": false,
      "default": "fgbio_umi",
      "help": "samtools, picard, picard_umi, fgbio_umi"
    }
  ],
  "outputSpec": [
    {
      "name": "dedupbam",
      "label": "Deduplicate Bam",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "dedupbai",
      "label": "Deduplicate BAM index",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
      "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/school_markdups.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x2"
        }
      }
    }
  }
}
