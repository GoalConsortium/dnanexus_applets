{
  "name": "integratevcf",
  "title": "Union VCF 0.5.30",
  "summary": "Combine VCF Outputs",
  "dxapi": "1.0.0",
  "version": "0.5.30",
  "inputSpec": [
     {
      "name": "vcffiles",
      "label": "VCF Files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": ""
    },
    {
      "name": "genodict",
      "label": "Genome Dictionary File for VCF sorting",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "union_vcf",
      "label": "Union VCF",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/integratevcf.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x2"
        }
      }
    }
  }
}
