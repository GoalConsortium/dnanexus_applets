{
  "name": "QC_BAM",
  "title": "QC_BAM",
  "summary": "QC of Alignment Workflow BAM",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "Consensus_BAM",
      "label": "Consensus BAM from alignment step (consensus.bam)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "panel",
      "label": "Panel Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "umihist",
      "label": "umi hist",
      "class": "file",
      "patterns": [
        "*"
       ],
      "help": ""
    },
    {
      "name": "dedupcov",
      "label": "dedups coverage",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "covuniqhist",
      "label": "uniq coverage",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "exoncovuniqstat",
      "label": "exon coverage",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "lowcovuniqstat",
      "label": "low coverage",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/QC_BAM.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem1_ssd1_x16"
        }
      }
    }
  }
}
