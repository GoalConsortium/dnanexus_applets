{
  "name": "rnaalign",
  "title": "rnaralign 0.5.29",
  "summary": "RNA sequence trim + alignment",
  "dxapi": "1.0.0",
  "version": "0.5.29",
  "inputSpec": [
    {
      "name": "fq1",
      "label": "Fastq1",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "fq2",
      "label": "Fastq2",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "help": ""
    },
    {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "mdup",
      "label": "MarkDup Method",
      "class": "string",
      "optional": false,
      "default": "fgbio_umi",
      "help": ""
    },
    {
      "name": "aligner",
      "label": "Aligner to be used",
      "class": "string",
      "optional": false,
      "default": "hisat",
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "trim1",
      "label": "Trim Fq R1",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trim2",
      "label": "Trim Fq R2",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trimreport",
      "label": "Trim Output Report",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "bam",
      "label": "Aligned BAM file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "bai",
      "label": "BAM Index file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "alignstats",
      "label": "rnaseq alignment summary stats file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/rnaalign.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x16"
        }
      }
    }
  }
}
