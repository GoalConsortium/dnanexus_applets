{
  "name": "gatkbam",
  "title": "GATK BQSR",
  "summary": "This applet contains GATK and runs BQSR for BAM files for samples analyzed downstream by GATK",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "openSource": true,
  "inputSpec": [
   {
      "name": "bam",
      "label": "Sorted BAM (.bam)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": "BAM file with duplicates removed or marked"
    },
   {
      "name": "bai",
      "label": "BAM Index (.bai)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bai"
      ],
      "help": "BAM File Index"
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": ""
    },
   {
      "name": "sampleid",
      "label": "ReadGroup/SampleID",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "gatkbam",
      "label": "GATK Bam",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "gatkbai",
      "label": "GATK BAM index",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 8
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/gatkbam.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_hdd2_x2"
        }
      }
    }
  },
  "details": {
  "upstreamProjects": [
    {
      "name": "GATK4",
      "repoUrl": "https://gatk.broadinstitute.org/hc/en-us",
      "version": "4.1.4.0",
      "license": "BSD 3-Clause",
      "licenseUrl": "https://github.com/broadinstitute/gatk/blob/master/LICENSE.TXT",
      "citationUrl": "http://dx.doi.org/10.1038/ng.806",
      "author": "Broad"
    }
  ],
  "citations": [
    "http://dx.doi.org/10.1038/ng.806"
  ]
 }

}
