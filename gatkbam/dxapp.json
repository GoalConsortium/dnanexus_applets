{
  "name": "gatkbam",
  "title": "GATK BQSR Applet 0.5.36",
  "summary": "This applet contains GATK and runs BQSR for BAM files for samples analyzed downstream by GATK",
  "dxapi": "1.0.0",
  "version": "0.5.36",
  "inputSpec": [
   {
      "name": "bam",
      "label": "Raw BAM (.bam)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": ""
    },
   {
      "name": "bai",
      "label": "Raw BAM Index (.bai)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bai"
      ],
      "help": ""
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": ""
    },
   {
      "name": "pair_id",
      "label": "ReadGroup/SampleName",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "gatkbam",
      "label": "GATK Bam",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "gatkbai",
      "label": "GATK BAM index",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 4
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/gatkbam.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_hdd2_x2"
        }
      }
    }
  }
}
