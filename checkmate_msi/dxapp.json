{
  "name": "checkmate_msi",
  "title": "Variant Profiling with NGS CheckMate and MSISensor Pro",
  "summary": "This applet contains variant profiling methods for tumor only and somatic workflows. Including msisensor-pro, NGSCheckMates",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "openSource": true,
  "inputSpec": [
   {
      "name": "tbam",
      "label": "Tumor Sorted BAM (.bam)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": "Tumor BAM"
    },
   {
      "name": "nbam",
      "label": "Normal Sorted BAM (.bam)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.bam"
      ],
      "help": "Matched Normal BAM"
    },
    {
      "name": "reference",
      "label": "Reference Files (tar.gz)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "Reference File"
    },
    {
      "name": "panel",
      "label": "Target Panel Files (tar.gz)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.tar.gz"
      ],
      "help": "(Optional) Panel File"
    },
    {
      "name": "caseid",
      "label": "SubjectID/CaseID",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "msiout",
      "label": "MSIsensor-pro File Output",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "matched",
      "label": "Checkmates Matched File Output",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "all",
      "label": "Checkmates All File Output",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "seqstats",
      "label": "Somatic Sequence Statistics",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 2
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/variant_profiling.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x2"
        }
      }
    }
  },
    "details": {
  "upstreamProjects": [
    {
      "name": "MSISensor Pro",
      "repoUrl": "https://github.com/xjtu-omics/msisensor-pro",
      "version": "1.0.a",
      "licenseUrl": "https://github.com/xjtu-omics/msisensor-pro/blob/master/LICENSE"
      "author": "Peng Jia"
    },
    {
      "name": "NGS CheckMate",
      "repoUrl": "https://github.com/parklab/NGSCheckMate",
      "version": "ncm-1.0.0",
      "license": "MIT",
    }

  ],
  "citations": [
    "https://doi.org/10.1016/j.gpb.2020.02.001",
    "https://doi.org/10.1093/nar/gkx193"
  ]

 }
}
