{
  "name": "ralign",
  "title": "rnaseq alignment",
  "summary": "rnaseq alignment",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "pair_id",
      "label": "Sample ID",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "trimread1",
      "label": "trimmed read 1 fastq file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "trimread2",
      "label": "trimmed read 2 fastq file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "align",
      "label": "aligner option (hisat or star)",
      "class": "string",
      "optional": true,
      "default": "hisat",
      "help": ""
    },
    {
      "name": "markdups",
      "label": "mark duplicates option (picard,fgbio_umi,skip,etc)",
      "class": "string",
      "optional": true,
      "default": "fgbio_umi",
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "aligned",
      "label": "alignment bam file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "alignedsummary",
      "label": "alignment summary file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/ralign.sh"
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x36"
        }
      }
    }
  }
}
